@page
@using _09_01_InterimKantoor.Models;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Create a new account.</h2>
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>

                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control"/>
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control"/>
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.GeslachtSelect" class="control-label"></label>
                <select asp-for="Input.GeslachtSelect" class="form-control">
                    <option value="">Kies geslacht</option>
                    @foreach (var geslacht in Enum.GetValues(typeof(Geslacht)))
                    {
                        <option value="@geslacht">@geslacht</option>
                    }
                </select>
                <span asp-validation-for="Input.GeslachtSelect" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-4">
            <div>
                <label asp-for="Input.Straat"></label>
                <input asp-for="Input.Straat" class="form-control"/>
                <span asp-validation-for="Input.Straat" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Huisnummer"></label>
                <input asp-for="Input.Huisnummer" class="form-control" />
                <span asp-validation-for="Input.Huisnummer" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Postcode"></label>
                <input asp-for="Input.Postcode" class="form-control" />
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Gemeente"></label>
                <input asp-for="Input.Gemeente" class="form-control" />
                <span asp-validation-for="Input.Gemeente" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
                <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
            </div>
            <p></p>
            <div class="row">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
         </div>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
